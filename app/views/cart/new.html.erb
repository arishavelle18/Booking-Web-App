<%= provide(:title,"Check Out") %>

<h1>Check Out Process</h1>

<%= form_with model:@booking,url:cart_new_path,data:{turbo:false} do |f| %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br><br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br><br>
    <%= f.label :contact_number %>
    <%= f.text_field :contact_number %>
    <br><br>
     <%= f.label :role %>
  <%= f.select :payment_id, options_for_select([['Pay At Store', 'Pay Onsite'], ['Pay via Bank Payment', 'Pay via Bank Payment']]), prompt: 'Select mode of Payment' %>
    <br><br>
    <%= f.submit "Check out" %>

    <%= f.hidden_field :service_id,value:@appoint.service_id %>
    <%= f.hidden_field :address_id,value:@appoint.address_id %>
    <%= f.hidden_field :appointment_id,value:@appoint.id %>





<% end %>

